<!doctype html>
<html>
<head>
  <title>FitNext | Login</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <h1>FitNext - Login</h1>

  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>

  <form method="POST" action="/users/login">
    <p>Username</p>
    <input name="username" />

    <p>Password</p>
    <input type="password" name="password" />

    <p><button type="submit">Login</button></p>
  </form>

  <p><a href="../">Home</a></p>

  <hr>
<footer>
  <p>&copy; FitNext</p>
</footer>

</body>
</html>
