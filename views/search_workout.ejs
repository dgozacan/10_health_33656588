<!doctype html>
<html>
<head>
  <title>Search Workouts</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <h1>Search Workouts</h1>

  <form method="GET" action="./search">
    <input name="q" value="<%= q %>" placeholder="search workout, body part, or notes" />
    <button type="submit">Search</button>
  </form>

  <h2>Results</h2>

  <% if (rows.length === 0) { %>
    <p>No workouts found.</p>
  <% } else { %>
    <ul>
      <% rows.forEach(r => { %>
        <li>
          <strong><%= r.workout_date %></strong> —
          <%= r.workout_name %> (<%= r.body_part %>) —
          <%= r.duration_mins %> mins
          <% if (r.next_body_part) { %>
            — next: <%= r.next_body_part %>
          <% } %>
          <% if (r.notes) { %>
            — <%= r.notes %>
          <% } %>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <p><a href="../">Home</a></p>
</body>
</html>
